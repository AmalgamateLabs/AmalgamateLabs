<div class="jumbotron" role="banner">
    <div class="container">
        <div class="row">
            <div class="col-md-7">

                <figure class="text-center">
                    <a href="./index.html">
                        <img class="img-logo" src="@Model.LogoImage.ImagePath()" alt="">
                    </a>
                </figure>

                <h1>@Model.Title</h1>

                <p>@Model.Description</p>

                <!-- Button -->
                <!-- TODO: https://developer.microsoft.com/en-us/store/badges/ -->
                <p class="btn-app-store">
                    <a class="btn btn-danger btn-lg" href="#fakelinks">
                        <img src="images/btn-app-store.png" alt="">
                    </a>
                </p>

            </div>

            <div class="col-md-5">
                <figure>
                    <img class="img-SurfacePro" src="@Model.MainImage.ImagePath()" alt="">
                </figure>
            </div>
        </div>
    </div>
</div>

<!-- Features -->
<section class="features-section" id="section-2">
    <div class="container">

        <div class="row">
            <div class="col-md-5 col-features text-center">
                <figure>
                    <img class="img-SurfacePro img-SurfaceProLeft" src="@Model.Feature1Image.ImagePath()" alt="">
                </figure>
            </div>
            <div class="col-md-7 col-features features-content">
                <h3 id="title-1">@Model.Feature1Title</h3>
                <p>@Model.Feature1Description</p>
            </div>
        </div>

        <div class="row media-screen-800">
            <div class="col-md-7 col-features features-content">
                <h3 id="title-2">@Model.Feature2Title</h3>
                <p>@Model.Feature2Description</p>
            </div>
            <div class="col-md-5 col-features text-center">
                <figure>
                    <img class="img-SurfacePro margin-top margin-screen-800 img-SurfaceProRight" src="@Model.Feature2Image.ImagePath()" alt="">
                </figure>
            </div>
        </div>

        <div class="row">
            <div class="col-md-5 col-features text-center">
                <figure>
                    <img class="img-SurfacePro margin-top margin-top-1 img-SurfaceProLeft" src="@Model.Feature3Image.ImagePath()" alt="">
                </figure>
            </div>
            <div class="col-md-7 col-features features-content">
                <h3 id="title-3">@Model.Feature3Title</h3>
                <p>@Model.Feature3Description</p>

                <!-- Button -->
                <!-- TODO: https://developer.microsoft.com/en-us/store/badges/ -->
                <p class="btn-app-store">
                    <a class="btn btn-danger btn-lg" href="#fakelinks">
                        <img src="images/btn-app-store.png" alt="">
                    </a>
                </p>
            </div>
        </div>

    </div>
</section>

