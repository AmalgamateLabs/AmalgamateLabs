@model IEnumerable<AmalgamateLabs.Models.Movie>

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Aaron Salisbury" />
    <title>HTPC Landing</title>
    <meta name="description" content="Home theater PC landing page. Convenient access to the most prominent streams and movie releases." />
    <meta name="keywords" content="HTPC, Home, theater, PC, Personal, Computer, streams, movies, shows, landing, page" />
    <meta property="og:title" content="HTPC Landing" />
    <meta property="og:url" content="https://amalgamatelabs.com/HTPC/" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="Home theater PC landing page. Convenient access to the most prominent streams and movie releases." />
    <meta property="og:image" content="https://amalgamatelabs.com/images/htpc/og-site.jpg" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="600" />
    <meta property="og:image:height" content="315" />
    <meta property="og:site_name" content="HTPC Landing" />
    <meta name="msvalidate.01" content="4C6ABE849CD97804DBE07853560E2339" />
    <meta content="920678824666936" property="fb:app_id">
    <link href="~/images/htpc/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="https://amalgamatelabs.com/HTPC/" rel="canonical" />
    <link href="https://amalgamatelabs.com/HTPC/" rel="alternate" hreflang="x-default" />
    <link href="https://fonts.googleapis.com/css?family=Monoton" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css' />
    <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="//ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link href="lib/magnific-popup/magnific-popup.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/htpc.css" />
    <script src="~/js/htpc/set-background.js"></script>
</head>

<body id="page-top">

    @* search.google.com/structured-data/testing-tool *@
    <div id="RichSnippet" itemscope itemtype="//schema.org/CollectionPage">
        <div itemprop="about">Convenient landing page for HTPCs to access the most prominent streams and movie releases.</div>
        <div itemprop="lastReviewed">@DateTime.Now.AddDays(-2).ToString("MMMM dd, yyyy")</div>
        <div itemprop="url">https://amalgamatelabs.com/HTPC/</div>
        <div itemprop="mainContentOfPage" itemscope itemtype="//schema.org/WebPageElement">
            <div itemprop="accessMode">visual</div>
            <div itemprop="keywords">movie, television, streams</div>
            <div itemprop="typicalAgeRange">13+</div>
        </div>
        <div itemprop="specialty" itemscope itemtype="//schema.org/Specialty">
            <div itemprop="description">Movie and television stream service curation.</div>
        </div>
    </div>

    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand page-scroll" href="#page-top"><span id="htpc-title">HTPC</span> Landing</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul id="navigationList" class="nav navbar-nav navbar-right">
                    <li>
                        <a class="page-scroll" href="#spotlight">Spotlight</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header>
        <script language="javascript">LoadBackground();</script>
        <div class="header-content">
            <div class="header-content-inner">

                <table id="streams-table">
                    <tr>
                        <td><a href="https://www.youtube.com/"><img src="~/images/htpc/stream-buttons/youtube.png" alt="YouTube" title="YouTube"></a></td>
                        <td><a href="https://www.netflix.com/"><img src="~/images/htpc/stream-buttons/netflix.png" alt="Netflix" title="Netflix"></a></td>
                        <td><a href="https://www.hulu.com/"><img src="~/images/htpc/stream-buttons/hulu.png" alt="Hulu" title="Hulu"></a></td>
                        <td><a href="https://www.disneyplus.com/"><img src="~/images/htpc/stream-buttons/disney-plus.png" alt="Disney Plus" title="Disney Plus"></a></td>
                        <td><a href="https://www.hbomax.com/"><img src="~/images/htpc/stream-buttons/hbo-max.png" alt="HBO Max" title="HBO Max"></a></td>
                    </tr>
                    <tr>
                        <td><a href="https://amzn.to/2Opu47r"><img src="~/images/htpc/stream-buttons/amazon_instant.png" alt="Amazon Instant Video" title="Amazon Instant Video"></a></td>
                        <td><a href="https://tubitv.com/"><img src="~/images/htpc/stream-buttons/tubi.png" alt="Tubi" title="Tubi"></a></td>
                        <td><a href="https://www.cbs.com/all-access/"><img src="~/images/htpc/stream-buttons/cbs-all-access.png" alt="CBS All Access" title="CBS All Access"></a></td>
                        <td><a href="https://play.google.com/store/movies?hl=en"><img src="~/images/htpc/stream-buttons/google-play.png" alt="Google Play" title="Google Play"></a></td>
                        <td><a href="https://www.sling.com/"><img src="~/images/htpc/stream-buttons/sling.png" alt="Sling TV" title="Sling TV"></a></td>
                    </tr>
                    <tr>
                        <td><a href="https://www.vudu.com/"><img src="~/images/htpc/stream-buttons/vudu.png" alt="Vudu" title="Vudu"></a></td>
                        <td><a href="https://pbskids.org/"><img src="~/images/htpc/stream-buttons/pbs-kids.png" alt="PBS Kids" title="PBS Kids"></a></td>
                        <td><a href="https://www.twitch.tv/"><img src="~/images/htpc/stream-buttons/twitch.png" alt="Twitch" title="Twitch"></a></td>
                        <td><a href="https://www.spotify.com/us/"><img src="~/images/htpc/stream-buttons/spotify.png" alt="Spotify" title="Spotify"></a></td>
                        <td><a href="https://www.pandora.com/"><img src="~/images/htpc/stream-buttons/pandora.png" alt="Pandora" title="Pandora"></a></td>
                    </tr>
                </table>

                <a id="btnMore" href="#spotlight" class="btn btn-primary btn-xl page-scroll">More</a>
            </div>
        </div>
    </header>
    <section class="bg-primary" id="spotlight">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">We've got what you need!</h2>
                    <hr class="light">
                    <p class="text-faded">Please consider supporting the curation of this site through the following services. All of the following links are sourced by Amazon, free to review, and easy to use. No strings attached!</p>
                    <a href="#services" class="page-scroll btn btn-default btn-xl sr-button">Get Started!</a>
                </div>
            </div>
        </div>
    </section>
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">At Your Service</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-gamepad text-primary sr-icons"></i>
                        <h3><a target="_blank" href="https://amzn.to/33Wf1Zs">Digital Video Games</a></h3>
                        <p class="text-muted">Shop by category, best sellers, and new releases.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-music text-primary sr-icons"></i>
                        <h3><a target="_blank" href="https://amzn.to/2r1H2Aq">Music Unlimited</a></h3>
                        <p class="text-muted">Stream the latest hits.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-film text-primary sr-icons"></i>
                        <h3><a target="_blank" href="https://amzn.to/35cum8v">Video</a></h3>
                        <p class="text-muted">Many popular movies and shows.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-book text-primary sr-icons"></i>
                        <h3><a target="_blank" href="https://amzn.to/2QwLnGv">Audible</a></h3>
                        <p class="text-muted">Audible has audiobooks for every passion.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="no-padding" id="featured-movies">
        <div class="container-fluid">
            <div class="row no-gutter">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-sm-6" style="background-color:@Html.DisplayFor(modelItem => item.ImagePrimaryHexColor)">
                        <a href="@Html.DisplayFor(modelItem => item.DetailPageURL)" class="movie-box">
                            <img src="@Html.DisplayFor(modelItem => item.ImageSource)" class="img-responsive img-movie" alt="@Html.DisplayFor(modelItem => item.Title)">
                            <div class="movie-box-caption">
                                <div class="movie-box-caption-content">
                                    <div class="project-category text-faded">@Html.DisplayFor(modelItem => item.Genre)</div>
                                    <div class="project-name">@Html.DisplayFor(modelItem => item.Title)</div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
    <aside class="bg-dark">
        <div class="container text-center">
            <div class="call-to-action">
                <h2>HTPC Landing was born from me simply wanting a clean home page for my home theater PC.</h2>
                @*<a href="https://startbootstrap.com/template-overviews/creative/" class="btn btn-default btn-xl sr-button">Download Now!</a>*@
            </div>
        </div>
    </aside>
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">Let's Get In Touch!</h2>
                    <hr class="primary">
                    <p>Questions, comments, or concerns? That's great! Send us an email and we will get back to you as soon as possible!</p>
                </div>
                @*<div class="col-lg-4 col-lg-offset-2 text-center">
                        <i class="fa fa-phone fa-3x sr-contact"></i>
                        <p>123-456-6789</p>
                    </div>
                    <div class="col-lg-4 text-center">*@
                <div class="col-lg-12 text-center">
                    <i class="fa fa-envelope-o fa-3x sr-contact"></i>
                    <p><a href="mailto:amalgamatelabs@gmail.com">AmalgamateLabs@gmail.com</a></p>
                </div>
            </div>
        </div>
    </section>

    <div id="footer">
        &copy;
        <script type="text/JavaScript">document.write(new Date().getFullYear());</script>
        Amalgamate Labs
    </div>

    <script src="//ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="//cdn.bootcss.com/scrollReveal.js/3.3.4/scrollreveal.min.js"></script>
    <script src="lib/magnific-popup/magnific-popup.min.js"></script>
    <script src="~/js/htpc/htpc.js"></script>
    <script src="~/js/htpc/tether.min.js"></script>
</body>
</html>

